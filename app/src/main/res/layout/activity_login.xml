<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/basil_background"
        tools:context=".LoginActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/login_lottie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/dunk" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_play"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:lottie_autoPlay="true"
                android:importantForAutofill="auto"
                app:lottie_speed="1.5"
                app:lottie_rawRes="@raw/isolation"
                app:layout_constraintBottom_toTopOf="@+id/google_sign_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <com.google.android.material.chip.Chip
                android:id="@+id/google_sign_in"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="96dp"
                android:minHeight="55dp"
                android:fontFamily="@font/montserrat"
                android:text="Sign In With Google"
                android:textStyle="bold"
                android:textColor="@color/basil_green_dark"
                android:textSize="16sp"
                app:chipBackgroundColor="@color/basil_bg"
                app:chipIcon="@drawable/fui_ic_googleg_color_24dp"
                app:iconStartPadding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:textEndPadding="20dp"
                app:textStartPadding="20dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/login_fab"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:background="@color/basil_background"
                android:foreground="@drawable/ball_of_basketball"
                app:fab_size="mini"
                app:layout_constraintBottom_toBottomOf="@+id/google_sign_in"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lottie_play" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:backgroundTint="@color/basil_yellow"
                android:fontFamily="@font/montserrat"
                android:text="LeHoop"
                android:textColor="@color/basil_green_dark"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>